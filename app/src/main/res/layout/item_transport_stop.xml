<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/blockItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:id="@+id/blockBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/abc_list_item_padding_horizontal_material">

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/blockTime"
            android:layout_toStartOf="@id/blockTime"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Завод Самоходных Комбайнов"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/textName"
            android:layout_alignLeft="@id/textName"
            android:layout_alignRight="@id/textName"
            android:layout_alignStart="@id/textName"
            android:layout_below="@id/textName"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Конечная"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"/>

        <FrameLayout
            android:id="@+id/blockTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textNextTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:22"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textNextDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:20"
                android:textColor="@color/time_next_day"
                android:textSize="16sp"/>

        </FrameLayout>
    </RelativeLayout>
</FrameLayout>