<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/blockBadgeContainer"
        android:layout_width="@dimen/list_icon_size"
        android:layout_height="@dimen/list_icon_size">

        <ImageView
            android:id="@+id/imageBadge_Bus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle"
            android:tint="@color/transport_badge_bus"/>

        <ImageView
            android:id="@+id/imageBadge_Trolley"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle"
            android:tint="@color/transport_badge_trolley"
            android:visibility="gone"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/textNumberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="12a"
        android:textColor="@color/transport_badge_text"
        android:textSize="@dimen/badgeText_medium"/>

</RelativeLayout>